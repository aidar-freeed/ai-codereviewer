<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/libraryname"
            android:text="@string/library_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="@color/gradient_end"
            android:paddingBottom="5dp"/>
        <TextView
            android:id="@+id/libraryversion"
            android:text="@string/library_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/libraryname"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="@color/gradient_end"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"/>
        <TextView
            android:id="@+id/description"
            android:text="@string/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/libraryname"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingBottom="5dp"/>
        <TextView
            android:id="@+id/librarycreator"
            android:text="librarycreator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/libraryname"
            android:textSize="11dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/timelineLine" />
</LinearLayout>